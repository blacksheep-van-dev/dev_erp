{% extends 'base.html.twig' %}

{% block title %}Option{% endblock %}

{% block body %}
    <h1>Option</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ option.id }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ option.createdAt ? option.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ option.updatedAt ? option.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ option.label }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ option.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ option.price }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ option.image }}</td>
            </tr>
            <tr>
                <th>Consumable</th>
                <td>{{ option.consumable ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>StockControl</th>
                <td>{{ option.stockControl ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ option.type }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_option_index') }}">back to list</a>

    <a href="{{ path('app_option_edit', {'id': option.id}) }}">edit</a>

    {{ include('option/_delete_form.html.twig') }}
{% endblock %}
