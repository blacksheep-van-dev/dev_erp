{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>Détail de l'utilisateur</h1>
	<a class="btn btn-sm btn-secondary" href="{{ path('app_user_index') }}">Retour à la liste</a>

	<a class="btn btn-sm btn-danger" href="{{ path('app_user_edit', {'id': user.id}) }}">Editer</a>

	{{ include('user/_delete_form.html.twig') }}

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.roles ? user.roles|json_encode : '' }}</td>
			</tr>
			<tr>
				<th>Mot de passe</th>	
				<td>
				{% if user.password is not null %}
					{{ user.password }}
				{% else %}
					{{ "no password"}}
				{% endif %}
				</td>
			</tr>
			<tr>
				<th>Prénom</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>Nom</th>
				<td>{{ user.LastName }}</td>
			</tr>
			<tr>
				<th>Compte validé</th>
				<td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
			</tr>
		</tbody>
	</table>

{% endblock %}
