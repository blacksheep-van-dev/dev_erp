{% block title %}PriceList{% endblock %}

{% block body %}
    <h1>PriceList</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ price_list.id }}</td>
            </tr>
            <tr>
