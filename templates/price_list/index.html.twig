{% extends 'base.html.twig' %}

{% block title %}PriceList index{% endblock %}

{% block body %}
    <h1>PriceList index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Label</th>
                <th>StartDate</th>
                <th>EndDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for price_list in price_lists %}
            <tr>
                <td>{{ price_list.id }}</td>
                <td>{{ price_list.label }}</td>
                <td>{{ price_list.startDate ? price_list.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ price_list.endDate ? price_list.endDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_price_list_show', {'id': price_list.id}) }}">show</a>
                    <a href="{{ path('app_price_list_edit', {'id': price_list.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_price_list_new') }}">Create new</a>
{% endblock %}
