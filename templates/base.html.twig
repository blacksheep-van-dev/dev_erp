							<button class="btn btn-outline-success" type="submit">Recherche</button>
						</form>

						{# logout btn #}

						<a class="m-2 btn btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>

					</div>
				</div>
			</nav>
